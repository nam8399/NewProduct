<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.sikstree.newproducts.viewModel.AddReviewViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_main_layout"
        android:layout_width="match_parent"
        android:background="@color/backgroundColor"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/choice_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리뷰까지 등록해주시다니!"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:lineSpacingExtra="-5sp"
                    android:gravity="center_vertical">
                </TextView>
                <ImageView
                    android:id="@+id/choice_title_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/icon_handsmile">
                </ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/choice_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연세우유 말차 생크림빵"
                android:textColor="#0CFBB2"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/choice_imgadd_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_text_layout"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 등록하기"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:textColor="@color/white">
            </TextView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_camera">
            </ImageView>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_skip"
            android:layout_width="344dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_add"
            android:gravity="center"
            android:src="@drawable/btn_skip"
            android:layout_marginBottom="8dp">
        </ImageView>
        <TextView
            android:id="@+id/btn_add"
            android:layout_width="344dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="등록 완료"
            android:textColor="#2D2E2E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/selector_btn"
            android:layout_marginBottom="44dp">
        </TextView>
        <LinearLayout
            android:id="@+id/choice_imgadd_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/choice_imgadd_title"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_imgadd"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:src="@drawable/btn_imgadd">
            </ImageView>
            <ImageView
                android:id="@+id/btn_img1"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:visibility="invisible"
                android:src="@drawable/btn_imgadd">
            </ImageView>
            <ImageView
                android:id="@+id/btn_img2"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:visibility="invisible"
                android:src="@drawable/btn_imgadd">
            </ImageView>
            <ImageView
                android:id="@+id/btn_img3"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:visibility="invisible"
                android:src="@drawable/btn_imgadd">
            </ImageView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/choice_reviewadd_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_imgadd_list"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 작성하기"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:textColor="@color/white">
            </TextView>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:src="@drawable/icon_note">
            </ImageView>
        </LinearLayout>

        <EditText
            android:id="@+id/review_edit_text"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:background="@drawable/review_add_background"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:hint="20자 이내로 입력해 주세요"
            android:textColorHint="#676767"
            android:textColor="@color/white"
            android:gravity="left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_reviewadd_title">
        </EditText>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>