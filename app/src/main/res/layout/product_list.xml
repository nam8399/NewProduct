<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/title_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/review_brand_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_cu"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/review_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연세우유 말차생크림빵"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#E7E7E7">
            </TextView>
            <TextView
                android:id="@+id/review_title_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제조사"
                android:gravity="left"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="#BABFBF">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/review_price"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/review_price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:text="3,800원">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/frame_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:elevation="3dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/title_brand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/review_img"
                android:layout_width="match_parent"
                android:layout_height="344dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/review_grade_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_review"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/review_imoji"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_note"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:id="@+id/review_great"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#D5C8F0"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="6dp"
            android:textSize="16sp"
            android:text="여러분의 리뷰를 기다려요...">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </View>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_comment">
        </ImageView>
    </LinearLayout>
    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_grade_frame"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>
    <TextView
        android:id="@+id/review_comment_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23개의 리뷰 모두 보기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_grade_frame"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:textColor="#979B9B"
        android:textSize="14sp">
    </TextView>
    <LinearLayout
        android:id="@+id/review_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_comment_count"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/review_cm_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="불타는삼각김밥"
             android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>
        <TextView
            android:id="@+id/review_cm_comment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="지립니다"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:textColor="#E7E7E7"
            android:textSize="14sp">
        </TextView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>