<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/review_background"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/review_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp">
        <ImageView
            android:id="@+id/review_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_girl"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:id="@+id/review_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center"
            android:text="붙타는삼각김밥">
        </TextView>
        <TextView
            android:id="@+id/review_date"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:textColor="#979B9B"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="24dp"
            android:text="2023.0520">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/review_center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_top_layout"
        app:layout_constraintBottom_toTopOf="@+id/review_text_layout"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="12dp">
        <ImageView
            android:id="@+id/review_imoji"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_5"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:id="@+id/review_grade_text"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#BABFBF"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center"
            android:text="최고에요!">
        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="24dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/review_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_center_layout"
        app:layout_constraintBottom_toTopOf="@+id/review_img"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp">
        <TextView
            android:id="@+id/review_text"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#E7E7E7"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center"
            android:text="지립니다">
        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="24dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/review_img"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_text_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp">
        <ImageView
            android:id="@+id/img_1"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp">
        </ImageView>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp">
        </ImageView>
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_marginRight="4dp">
        </ImageView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>