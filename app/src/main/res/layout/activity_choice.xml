<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.sikstree.newproducts.viewModel.ChoiceViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_main_layout"
        android:layout_width="match_parent"
        android:background="@color/backgroundColor"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/choice_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 상품은 어땠나요?"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:lineSpacingExtra="-5sp"
                    android:gravity="center_vertical">
                </TextView>
                <ImageView
                    android:id="@+id/choice_title_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:visibility="invisible"
                    android:src="@drawable/icon_handsmile">
                </ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연세우유 말차 생크림빵"
                android:textColor="#0CFBB2"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/choice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최고에요!"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/choice_img">
        </TextView>
        <ImageView
            android:id="@+id/choice_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="137dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choice_text_layout"
            app:layout_constraintBottom_toTopOf="@+id/choice_list"
            android:src="@drawable/icon_what"
            app:layout_constraintBottom_toBottomOf="parent">
        </ImageView>
        <LinearLayout
            android:id="@+id/choice_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toBottomOf="@+id/choice_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_c1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selector_c1"
                    android:onClick="@{()->viewModel.clickIcon(1)}"
                    android:layout_marginBottom="24dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별로"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_c2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/selector_c2"
                    android:layout_gravity="center"
                    android:onClick="@{()->viewModel.clickIcon(2)}"
                    android:layout_marginBottom="24dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="애매"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_c3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/selector_c3"
                    android:layout_gravity="center"
                    android:onClick="@{()->viewModel.clickIcon(3)}"
                    android:layout_marginBottom="24dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_c4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/selector_c4"
                    android:layout_gravity="center"
                    android:onClick="@{()->viewModel.clickIcon(4)}"
                    android:layout_marginBottom="24dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좋음"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_c5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/selector_c5"
                    android:layout_gravity="center"
                    android:onClick="@{()->viewModel.clickIcon(5)}"
                    android:layout_marginBottom="24dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최고"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="344dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/btn_next"
            android:layout_marginBottom="44dp">
        </ImageView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>